<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutBrand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include layout="@layout/activity_headline" />

    <ScrollView
        android:id="@+id/carBrandView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/car_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" >
            <TextView 
                android:id="@+id/host_models"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7E4E4"
                android:text="热门车型"
                />
            <LinearLayout 
                android:id="@+id/brand_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                ></LinearLayout>
            <LinearLayout 
                android:id="@+id/brand_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E7E4E4"
                >
                <LinearLayout 
                android:id="@+id/brand_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>