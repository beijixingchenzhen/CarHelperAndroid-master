<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/service_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/service_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精致洗车"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <View
                            android:layout_width="1dip"
                            android:layout_height="10dp"
                            android:background="@color/forhead_gray"
                            android:layout_weight="1"/>

                        <View
                            android:layout_width="1dip"
                            android:layout_height="10dp"
                            android:background="@color/forhead_gray"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                style="@style/service_detail_text_2"
                                android:text="91价:"
                                android:textColor="@color/black"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/service_detail_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="88"
                                android:textColor="#FF0000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView5"
                                style="@style/service_detail_text_2"
                                android:text="元"
                                android:textColor="@color/black"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                    style="@style/service_detail_text_2"
                                    android:text="原价:"
                                    android:textColor="@color/text_gray"
                                    android:layout_marginRight="5dp"/>

                            <TextView
                                    android:id="@+id/service_detail_origin_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="120"
                                    android:textColor="@color/text_gray"
                                    android:textSize="20sp" />

                            <TextView
                                    style="@style/service_detail_text_2"
                                    android:text="元"
                                    android:textColor="@color/text_gray"
                                    android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/service_detail_buy_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18dp"
                        android:text="立即购买"
                        android:background="#FF8C00"
                        android:padding="8dp"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66CCFF" />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:background="@color/forhead_gray">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/forhead_gray">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="服务详情特色:"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/service_detail_normal_textsize"
                                android:layout_marginRight="5dp"/>

                        <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="洗车+洗坐垫+wifi"
                                android:textSize="@dimen/service_detail_normal_textsize"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/dotted_line" >
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_weight="1">
                            <ImageView
                                    android:id="@+id/imageView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"/>

                            <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/service_detail_normal_textsize"
                                    android:text="支持支付宝付款" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_weight="1">
                            <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"/>

                            <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/service_detail_normal_textsize"
                                    android:text="支持退款" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/dotted_line" >
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/service_detail_comment"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="查看用户评论(0)"
                                android:textSize="@dimen/service_detail_normal_textsize"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                        <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="14dp"
                                android:src="@drawable/addmycar_right" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:background="@color/forhead_gray">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="洁美汽车美容"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>
                        <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/textView12"
                                android:layout_marginLeft="46dp"
                                android:layout_toRightOf="@+id/imageView4"
                                android:text="780米" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="深圳市龙岗区立新路"
                                android:textSize="@dimen/service_detail_normal_textsize"
                                android:textColor="@color/text_gray"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/choosebar_line"/>


                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:background="#333333"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#333333" />

            <WebView android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="20dp"
                     android:layout_weight="10"
                     android:background="@color/forhead_gray">

            </WebView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>